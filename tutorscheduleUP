<script>    
    function add(){
        
       // alert("WORKING");
        var days = $('#days').val();
        var times   = $('#times').val();        
        $.post('addtoschedule.php',{postdays:days, posttimes:times},
        function(data){
            
            $('#result2').html(data);
		
        
        });
        
    }   
</script>
